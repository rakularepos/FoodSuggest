<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FoodSuggest</title>

    <script type="text/javascript">
        function getProfiles(){
            alert("Hello Food Suggest");

            // Make a get call
            var xhr = new XMLHttpRequest();
            xhr.open('GET', "http://localhost:8080/fs/profiles/id/1", true);
            xhr.send();
            xhr.onreadystatechange = processRequest;

            function processRequest(e) {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    var response = JSON.parse(xhr.responseText);
                    console.log(response);
                    document.getElementById("intro").innerHTML = response;
                }
            }


        }
    </script>
</head>
<body>
    <h2 id="intro">{{intro}}</h2>
    <input type="button" value="getProfiles" onclick="getProfiles()"/>

</body>
</html>